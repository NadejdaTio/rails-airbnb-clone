<!-- Banner -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://res.cloudinary.com/ddlfhhbye/image/upload/v1488284367/mantalks-2-2016-image-3_dkufjd.jpg');">
  <div class="banner-content">
    <h1>GameBnb</h1>
    <p>Louez des jeux près de chez vous</p>
    <div class="search">
    <div class="form-inline">
      <%= form_tag(games_path, method: 'GET') do %>
        <input type="text" class="form-control input-lg" placeholder="où" name="address">
        <input type="date" class="form-control input-lg" placeholder="quand" name="start_date">
        <select class="form-control input-lg" placeholder="catégorie" name='category'>
          <% games_array = Game.all.map { |game| [game.category]} %>
          <option value="" disabled selected>catégorie</option>
          <%= options_for_select(games_array) %>
        </select>
        <input type="submit" class="btn btn-primary btn-lg" value="Rechercher">
      <% end %>
    </div>
    </div>
    <div class="wrap">
      <div class="box">
        <div class="text animated pulse"><%= link_to "En savoir plus", "#about", class: "read-more btn-medium" %></div>
      </div>
    </div>
  </div>
</div>

<!-- Wrapper Top 3 games-->
<div class="wrapper top-games">

<div class="container-fluid">
  <div class="text-center intro-index">
    <h2>Vous pouvez louer ces jeux sur notre site</h2>
  </div>

  <% @selections.each do |selection| %>
    <div class="row-fluid">
      <div class="span12">
        <div class="col-xs-12 col-lg-4 text-center">
          <div class="card"
          style="background-color: grey">
            <div class="card-category"><%= selection.category %></div>
            <div class="card-description">
              <h2><%= selection.name %></h2>
              <div class="badge-container">
                <div class="badge badge-blue"><%= selection.price %> €</div>
              </div>
            </div>
          </div>
          <a class="card-link" href="#" ></a>
          <%= link_to "", game_path(selection), class: "card-link", target: "_blank" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

</div>

